@{
    ViewData["Title"] = "TMS Login";
    Layout = null; // Full screen login
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>TMS Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea, #764ba2);
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        /* Background floating shapes */
        .bg-shape {
            position: absolute;
            width: 300px;
            height: 300px;
            background: rgba(255,255,255,0.15);
            border-radius: 50%;
            filter: blur(40px);
        }

        .shape1 {
            top: -80px;
            left: -80px;
        }

        .shape2 {
            bottom: -80px;
            right: -80px;
        }

        /* 3D Login Card */
        .login-wrapper {
            perspective: 1200px;
            z-index: 10;
        }

        .login-card {
            width: 380px;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(18px);
            border-radius: 20px;
            padding: 35px;
            color: #fff;
            box-shadow: 0 25px 45px rgba(0,0,0,0.3);
            transform-style: preserve-3d;
            transition: transform 0.6s ease;
        }

            .login-card:hover {
                transform: rotateY(10deg) rotateX(5deg);
            }

        .login-title {
            text-align: center;
            font-weight: 600;
            font-size: 28px;
            margin-bottom: 10px;
        }

        .login-subtitle {
            text-align: center;
            font-size: 14px;
            opacity: 0.85;
            margin-bottom: 25px;
        }

        .form-control {
            background: rgba(255,255,255,0.2);
            border: none;
            border-radius: 10px;
            color: #fff;
        }

            .form-control::placeholder {
                color: rgba(255,255,255,0.7);
            }

            .form-control:focus {
                background: rgba(255,255,255,0.25);
                color: #fff;
                box-shadow: none;
            }

        .btn-login {
            background: linear-gradient(135deg, #ff512f, #dd2476);
            border: none;
            border-radius: 12px;
            padding: 12px;
            font-weight: 600;
            color: #fff;
            transition: all 0.3s ease;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.3);
            }

        .tms-footer {
            text-align: center;
            font-size: 12px;
            opacity: 0.7;
            margin-top: 20px;
        }

        .bubbles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 1;
        }

            .bubbles li {
                position: absolute;
                display: block;
                list-style: none;
                width: 20px;
                height: 20px;
                background: rgba(255, 255, 255, 0.2);
                animation: floatBubble 25s linear infinite;
                bottom: -150px;
                border-radius: 50%;
                backdrop-filter: blur(5px);
            }

                /* Different sizes & positions */
                .bubbles li:nth-child(1) {
                    left: 10%;
                    width: 80px;
                    height: 80px;
                    animation-duration: 22s;
                }

                .bubbles li:nth-child(2) {
                    left: 20%;
                    width: 25px;
                    height: 25px;
                    animation-duration: 12s;
                    animation-delay: 2s;
                }

                .bubbles li:nth-child(3) {
                    left: 35%;
                    width: 40px;
                    height: 40px;
                    animation-duration: 18s;
                }

                .bubbles li:nth-child(4) {
                    left: 50%;
                    width: 100px;
                    height: 100px;
                    animation-duration: 30s;
                }

                .bubbles li:nth-child(5) {
                    left: 65%;
                    width: 20px;
                    height: 20px;
                    animation-duration: 14s;
                }

                .bubbles li:nth-child(6) {
                    left: 75%;
                    width: 60px;
                    height: 60px;
                    animation-duration: 26s;
                }

                .bubbles li:nth-child(7) {
                    left: 85%;
                    width: 120px;
                    height: 120px;
                    animation-duration: 35s;
                }

                .bubbles li:nth-child(8) {
                    left: 5%;
                    width: 30px;
                    height: 30px;
                    animation-duration: 16s;
                }

                .bubbles li:nth-child(9) {
                    left: 45%;
                    width: 15px;
                    height: 15px;
                    animation-duration: 10s;
                }

                .bubbles li:nth-child(10) {
                    left: 90%;
                    width: 90px;
                    height: 90px;
                    animation-duration: 28s;
                }

        /* Bubble floating animation */
        @@keyframes floatBubble {
            0%

        {
            transform: translateY(0) rotate(0deg);
            opacity: 0;
        }

        10% {
            opacity: 0.4;
        }

        50% {
            opacity: 0.25;
        }

        100% {
            transform: translateY(-1200px) rotate(360deg);
            opacity: 0;
        }

        }
    </style>
</head>

<body>
    <ul class="bubbles">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
    </ul>

    <!-- Background Shapes -->
    <div class="bg-shape shape1"></div>
    <div class="bg-shape shape2"></div>

    <!-- Login Card -->
    <div class="login-wrapper">
        <div class="login-card">

            <div class="login-title">TMS</div>
            <div class="login-subtitle">Task Management System</div>

            <form method="post" asp-action="Login" asp-controller="Auth">

                <div class="mb-3">
                    <input type="text"
                           name="Email"
                           class="form-control"
                           placeholder="User ID"
                           required />
                </div>

                <div class="mb-4">
                    <input type="password"
                           name="PasswordHash"
                           class="form-control"
                           placeholder="Password"
                           required />
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-login">
                        Login
                    </button>
                </div>

                @if (ViewBag.LoginError != null)
                {
                    <div class="mt-3 text-center text-warning fw-semibold">
                        @ViewBag.LoginError
                    </div>
                }
            </form>

            <div class="tms-footer">
                © 2026 TMS • Secure Login
            </div>

        </div>
    </div>

</body>
</html>
